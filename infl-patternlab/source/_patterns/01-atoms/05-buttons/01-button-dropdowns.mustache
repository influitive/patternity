<section class="pattern-section">
  <header>
    <h3>button dropdowns</h3>
  </header>

  <p>Button dropdowns mix the awesomeness of a button with the functionality of a dropdown.</p>

  <h4>Single Button Dropdowns</h4>

  <div id="single-button-dropdown-important-pattern" style="display: inline-block; margin-right:20px;"></div>
  <script type="text/javascript">
    (function() {
      var props = {
        title : "Button Title",
        type : "important",
        options : [
          inflComp.React.createElement("a", {href: "http://google.ca", target: "_blank", key : "option-1", children : ["Option 1"]}),
          inflComp.React.createElement("a", {href: "http://google.ca", target: "_blank", key : "option-2", children : ["Option 2"]})
        ],
        onChange : function(key){
          console.log(key);
        }
      };

      inflComp.buttonDropdown(props, "single-button-dropdown-important-pattern");
    })();
  </script>

