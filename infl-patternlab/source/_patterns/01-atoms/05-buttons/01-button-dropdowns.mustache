<section class="pattern-section">
  <header>
    <h3>button dropdowns</h3>
  </header>

  <p>Button dropdowns mix the awesomeness of a button with the functionality of a dropdown.</p>

  <h4>Single Button Dropdowns</h4>

  <div id="single-button-dropdown-pattern"></div>
  <script type="text/javascript">
    (function() {
      var props = {
        title : "Button Title",
        type : "important",
        options : [
          inflComp.React.createElement("a", {href: "http://google.ca", target: "_blank", key : "option-1", children : ["Option 1"]}),
          inflComp.React.createElement("a", {href: "http://google.ca", target: "_blank", key : "option-2", children : ["Option 2"]})
        ]
      };

      inflComp.React.render(
        inflComp.React.createElement(inflComp.ButtonDropdown, props),
        document.getElementById("single-button-dropdown-pattern")
      );
    })();
  </script>

  <h4 class="code-title">Code</h4>

  <h5 class="code-title">JSX</h5>
  <pre class="code">
    <code>
      &lt;ButtonDropdown title="Button Title" type="important" options={[...]} onChange={on_change_callback} /&gt;
    </code>
  </pre>

  <h5 class="code-title">Without JSX</h5>
  <pre class="code">
    <code>
      React.render(
        React.createElement(ButtonDropdown, props),
        {DOM element to append accordion to}
      );
    </code>
  </pre>

