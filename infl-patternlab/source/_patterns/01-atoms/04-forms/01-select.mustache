<section class="pattern-section">
  <header>
    <h3>select</h3>
  </header>

  <span id="select-dropdown-pattern"></span>
  <script type="text/javascript">
    (function() {
      function createOption(value, name){
        return inflComp.React.createElement('option', {
          value : value,
          children : [name]
        });
      }

      function createOptionGroup(label, options){
        return inflComp.React.createElement('optgroup', {
          label : label,
          children : options
        });
      }

      var props = {
        key: "select-dropdown-" + Math.random(),
        name : "select-dropdown",
        onChange : function(event){
          console.log(event.target.value);
        },
        message : "Hint: select one option.",
        value : "5",
        children : [
          createOptionGroup("test label", [
            createOption("1", "Option One"),
            createOption("2", "Option Two"),
            createOption("3", "Option Three"),
            createOption("4", "Option Four")
          ]),
          createOptionGroup("test label", [
            createOption("5", "Option Five"),
            createOption("6", "Option Six"),
            createOption("7", "Option Seven"),
            createOption("8", "Option Eight")
          ])
        ]
      };

      inflComp.selectDropdown(props, "select-dropdown-pattern");
    })();
  </script>

  <h4 class="code-title">Code</h4>

  <h5 class="code-title">JSX</h5>
  <pre class="code">
    <code>
      &lt;SelectDropdown key={key} name="select_name" onChange={handle_change_callback}&gt;
        &lt;option value={value}&gt;option name&lt;/option&gt;
        &lt;option value={value}&gt;option name&lt;/option&gt;
        &lt;option value={value}&gt;option name&lt;/option&gt;
      &lt;/SelectDropdown&gt;

      &lt;SelectDropdown key={key} name="select_name" onChange={handle_change_callback}&gt;
        &lt;optgroup label={label}&gt;
          &lt;option value={value}&gt;option name&lt;/option&gt;
          &lt;option value={value}&gt;option name&lt;/option&gt;
          &lt;option value={value}&gt;option name&lt;/option&gt;
        &lt;/optgroup&gt;
        &lt;optgroup label={label}&gt;
          &lt;option value={value}&gt;option name&lt;/option&gt;
          &lt;option value={value}&gt;option name&lt;/option&gt;
          &lt;option value={value}&gt;option name&lt;/option&gt;
        &lt;/optgroup&gt;
      &lt;/SelectDropdown&gt;
    </code>
  </pre>

  <h5 class="code-title">Without JSX</h5>
  <pre class="code">
    <code>
      React.render(
        React.createElement(SelectDropdown, props, children),
        {DOM element to append notice to}
      );
    </code>
  </pre>

  <h4 class="code-title">Props</h4>

  <pre class="code">
    <code>
      {
        key: string               // react key
        name : string,            // name of select
        onChange : function,      // callback for when the selected value changes
        value : {selected_value}  // selected value of the dropdown
        children : [...],         // array or react elements
        message : string,         // hint, error etc. displayed below the select
        disabled : bool           // determines if the select is active or not
      }
    </code>
  </pre>
</section>
