{
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "env": {
        "commonjs": true,
        "node": true,
        "browser": true,
        "mocha": true
    },
    "settings": {
        "ecmascript": 6,
        "jsx": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "max-statements": [1, 15],
        "max-params": [1, 4],
        "max-len": [1, 120, 4],
        "max-depth": [1, 2],
        "complexity": [1, 3],
        "strict": 0,
        "no-console": 0,
        "quotes": [2, "single"],
        "no-trailing-spaces": [2, { "skipBlankLines": false }],
        "camelcase": 0,
        "indent": [2, 2],
        "key-spacing": [2, {
          "beforeColon": false,
          "afterColon": true,
          "mode": "minimum"
        }],
        "space-before-function-paren": [2, "never"],
        "space-before-blocks": [2, "always"],
        "space-after-keywords": [2, "always"],

        "react/no-multi-comp": 2
    }
}
